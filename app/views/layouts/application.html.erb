  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link"><%= link_to "Home", restaurants_path %><span></span></a>
        <a class="nav-item nav-link"><%= link_to "Create restaurant", new_restaurant_path %></a>
      </div>
    </div>
    </nav>
    <%= yield %>
  </body>
</html>
